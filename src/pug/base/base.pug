doctype html

block page-variable
  -
    /* Index, Name, Filename, Icon */
    /* we can't use Filename as index because pug variable can't use dash */
    var menuItems = {
      index: ['Home','index','ss-icon-Home'],
      icon: ['Icon','icon','ss-icon-Settings-suggest'],
      component: ['Component','','ss-icon-Table-view'],
      button: ['Button','button','ss-icon-Status-circle'],
      textfield: ['Textfield','textfield','ss-icon-Status-circle'],
      menu: ['Page Menu','menu','ss-icon-Status-circle'],
      pageheader: ['Page Header','pageheader','ss-icon-Status-circle'],
      siteheader: ['Site Header','siteheader','ss-icon-Status-circle'],
    }

  - var current = "index"

html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
    title
      | #{current == "index" ? "" : menuItems[current][0] + " Â· "}
      | Sushi v.0.1
    link(href="./assets/css/sushi.css", rel="stylesheet")
    link(href="./assets/css/prism.css", rel="stylesheet")
    link(rel="icon", type="image/svg+xml", href="./assets/images/favicon.svg")
    link(rel="icon", type="image/png", href="./assets/images/favicon.png")

  body(class="ss-site " + current +"-page")
    .header
      span.sitename
        span.ss-icon-Sushi
        | Sushi Design System

      ._flex-grow-1

      span.account
        button.ss-button.-secondary(onclick="changeBackground()")
          span.ss-icon-Picture
          | Background
    .body
      include ../base/main-menu.pug
      .ss-page
        block page-block

    script(src="./assets/js/prism.js")
    script(src="./assets/js/sushi.js")
