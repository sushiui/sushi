            .ss-field(style="flex: 1")
              .ss-label First Name
              input.ss-textfield.-disable(type="text" value="very long first name")
            .ss-field(style="flex: 1")
              .ss-label First Name
              input.ss-textfield.-viewonly(type="text" value="very long first name")
          .row
            .ss-field(style="flex: 1")
              .ss-label First Name
              input.ss-textfield.-error(type="text" value="very long first name")
              .ss-error Too long messsage
            .ss-field(style="flex: 1")
              .ss-label Last Name
              .ss-radiobutton-group.-error
